{
  "name": "teamtrack-monorepo",
  "private": true,
  "workspaces": [
    "apps/api",
    "apps/web",
    "apps/worker"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:api": "npm run start:dev --workspace api",
    "dev:web": "npm run dev --workspace web",
    "dev:worker": "npm run start --workspace worker",
    "build": "npm run build --workspace api && npm run build --workspace web",
    "lint": "npm run lint --workspace api && npm run lint --workspace web",
    "format": "prettier --write ."
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "prettier": "^3.2.5"
  }
}
